{# src/appiwebBundle/Resources/views/Advert/index.html.twig #}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <!-- titre -->
  <title>Cat list</title>
  <!-- menu -->
  {{ include("appliwebBundle:Advert:layout.html.twig") }}
</head>
<body>
  <!-- container -->
  <div class="container">

    <p>
      <!-- form -->
      <div class="well">
        <!-- theme bootstrap pour le form -->
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        <!-- affichage du form -->
        {{ form(form) }}
      </div>
      <br>
      <!-- onglet -->
      <div class="tabbed_area">
        <ul class="nav nav-tabs">
          <!-- lien -->
          <li class="active"><a data-toggle="tab" href="#content_1">Normal cat</a></li>
          <li><a data-toggle="tab" href="#content_2">Rare cat</a></li>
        </ul>
        <div class="tab-content">
          <!-- onglet1 -->
          <div id="content_1" class="tab-pane fade in active">
            <!-- tableau -->
            <table class="table table-bordered table-striped table-condensed">
              <!-- en tete -->
              <thead>
                <tr>
                  <!-- colone1 -->
                  <th>Image</th>
                  <!-- colone2 -->
                  <th>Nom</th>
                  <!-- colone3 -->
                  <th>Nom </th>
                  <!-- colone4 -->
                  <th>Description</th>
                  <!-- colone5 -->
                  <th>Personality</th>
                  <!-- colone6 -->
                  <th>Level</th>
                  <!-- colone7 -->
                  <th>Memento</th>
                  <!-- colone8 -->
                  <th>Edit</th>
                </tr>
              </thead>
              <!-- body du tab -->
              <tbody>
                <!-- affichage de la liste des chats si non rare-->
                {% for list in listCat %}
                {% if list.israre == 0 %}
                <tr>
                  <!-- colone1 -->
                  <td>&nbsp<a class="fancybox" href="Assets/Image/{{ list.frenchname }}.png" data-fancybox-group="gallery" title="{{ list.frenchname }}"><img src="Assets/Image/{{ list.frenchname }}.png" alt="{{ list.frenchname }}" style="width:62px;height:45px;"/></a>&nbsp</td>
                  <!-- colone2 -->
                  <td>&nbsp<a class="btn btn-info" href="infocat?chat={{ list.frenchname }}" role="button">{{ list.frenchname }} </a>&nbsp</td>
                  <!-- colone3 -->
                  <td>&nbsp{{ list.japanesename }}&nbsp</td>
                  <!-- colone4 -->
                  <td>&nbsp{{ list.description }}&nbsp</td>
                  <!-- colone5 -->
                  <td>&nbsp{{ list.personality }}&nbsp</td>
                  <!-- colone6 -->
                  <td>&nbsp{{ list.level }}&nbsp</td>
                  <!-- colone7 -->
                  <td>&nbsp<a class="fancybox" href="Assets/Image/Memento/{{ list.frenchname }}.png" data-fancybox-group="gallery" title="{{ list.frenchname }}"><img src="Assets/Image/Memento/{{ list.frenchname }}.png" alt="{{ list.frenchname }}" style="width:62px;height:45px;"/></a>&nbsp</td>
                  <!-- colone8 -->
                  <td>
                    <!-- edition -->
                    <a class="btn btn-primary" href="editcat?catid={{ list.id }}" role="button">Edit</a>
                    <!-- supression -->
                    <a class="btn btn-danger" href="admincat-list?catid={{ list.id }}" role="button">Delete</a></td>
                  </tr>
                  {% endif %}
                  {% endfor %}
                  <!-- fin body tab -->
                </tbody>
                <!-- fin tableau -->
              </table>
              <!-- fin onglet -->
            </div>
            <!-- onglet 2 -->
            <div id="content_2" class="tab-pane fade">
              <!-- tableau -->
              <table class="table table-bordered table-striped table-condensed">
                <!-- entete -->
                <thead>
                  <tr>
                    <!-- colone1 -->
                    <th>Image</th>
                    <!-- colone2 -->
                    <th>Nom</th>
                    <!-- colone3 -->
                    <th>Nom </th>
                    <!-- colone4 -->
                    <th>Description</th>
                    <!-- colone5 -->
                    <th>Personality</th>
                    <!-- colone6 -->
                    <th>Level</th>
                    <!-- colone7 -->
                    <th>Memento</th>
                    <!-- colone8 -->
                    <th>Edit</th>
                  </tr>
                </thead>
                <!-- body du tableau -->
                <tbody>
                  <!-- affichage des chat rare -->
                  {% for list in listCat %}
                  {% if list.israre == 1 %}
                  <tr>
                    <!-- colone1 -->
                    <td>&nbsp<a class="fancybox" href="Assets/Image/{{ list.frenchname }}.png" data-fancybox-group="gallery" title="{{ list.frenchname }}"><img src="Assets/Image/{{ list.frenchname }}.png" alt="{{ list.frenchname }}" style="width:62px;height:45px;"/></a>&nbsp</td>
                    <!-- colone2 -->
                    <td>&nbsp<a class="btn btn-info" href="infocat?chat={{ list.frenchname }}" role="button">{{ list.frenchname }} </a>&nbsp</td>
                    <!-- colone3 -->
                    <td>&nbsp{{ list.japanesename }}&nbsp</td>
                    <!-- colone4 -->
                    <td>&nbsp{{ list.description }}&nbsp</td>
                    <!-- colone5 -->
                    <td>&nbsp{{ list.personality }}&nbsp</td>
                    <!-- colone6 -->
                    <td>&nbsp{{ list.level }}&nbsp</td>
                    <!-- colone7 -->
                    <td>&nbsp<a class="fancybox" href="Assets/Image/Memento/{{ list.frenchname }}.png" data-fancybox-group="gallery" title="{{ list.frenchname }}"><img src="Assets/Image/Memento/{{ list.frenchname }}.png" alt="{{ list.frenchname }}" style="width:62px;height:45px;"/></a>&nbsp</td>
                    <!-- colone8 -->
                    <td>
                      <!-- edit -->
                      <a class="btn btn-primary" href="editcat?catid={{ list.id }}" role="button">Edit</a>
                      <!-- delete -->
                      <a class="btn btn-danger" href="admincat-list?catid={{ list.id }}" role="button">Delete</a></td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                    <!-- fin du body du tableau -->
                  </tbody>
                  <!-- fin du tableau -->
                </table>
                <!-- fin de l'onglet -->
              </div>

            </div>
          </div>
        </div>
      </p>
      <!-- footer -->
      {{ include("appliwebBundle:Advert:footer.html.twig") }}
    </body>
    </html>
