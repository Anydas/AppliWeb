<!DOCTYPE html>
<!-- saved from url=(0040)http://getbootstrap.com/examples/signin/ -->
<html lang="en"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  {% set page = 'Profile' %}

  <link rel="stylesheet" href="{{ asset('Assets/css/bootstrap.css') }}" />
  <link rel="stylesheet" href="{{ asset('Assets/css/style.css') }}" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  {{ include("appliwebBundle:Advert:fancybox.html.twig") }}
    {{ include("appliwebBundle:Advert:layout.html.twig") }}

  <title>Login</title>

</head>

<body style="background-color:#FFFFFF">
  <div class="container">
    <div id="formsign">
      {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <center><h2 class="form-signin-heading">Please sign in</h2></center>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username" class="sr-only">Username</label>
        <input type="text" id="username" name="_username"  class="form-control" placeholder="Pseudo" required="required" autofocus="" />

        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required="required" />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">Remember me</label>

        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" value="Submit" type="submit">Sign in</button>
      </form>
      <br>
      <a href="register"><button class="btn btn-lg btn-primary btn-block" id="test" role="button">Register</button></a>
    


    </div>
  </div>
 {{ include("appliwebBundle:Advert:footer.html.twig") }}
</body></html>
